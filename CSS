/* --- Responsiveness: Media Queries --- */


/* Tablet View (768px to 1023px) */
@media (min-width: 768px) and (max-width: 1023px) {
    /* Hero Section: Text Reflows fine, no major change needed */
    .hero-content h1 {
        font-size: 2.5rem;
    }

    /* Skills: Grid becomes 2-column */
    .skills-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

/* Mobile View (â‰¤ 767px) */
@media (max-width: 767px) {
    /* Header: Stacked Navigation / Hamburger Menu */
    .desktop-nav {
        display: none; /* Hide desktop links */
    }

    .hamburger {
        display: flex; /* Show hamburger icon */
        flex-direction: column;
        justify-content: space-around;
        width: 30px;
        height: 25px;
    }

    .hamburger span {
        display: block;
        height: 3px;
        background-color: var(--text-color);
        border-radius: 3px;
        transition: all 0.3s ease-in-out;
    }
    
    /* Hamburger Menu Animation */
    .hamburger.active span:nth-child(1) {
        transform: translateY(11px) rotate(45deg);
    }
    .hamburger.active span:nth-child(2) {
        opacity: 0;
    }
    .hamburger.active span:nth-child(3) {
        transform: translateY(-11px) rotate(-45deg);
    }

    .mobile-nav {
        display: flex;
        flex-direction: column;
        position: absolute;
        top: 70px; /* Below the header */
        left: 0;
        width: 100%;
        background: var(--card-background);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transform: translateY(-100%); /* Start off-screen */
        transition: transform 0.3s ease-in-out;
    }

    .mobile-nav.active {
        transform: translateY(0); /* Slide in */
    }

    .mobile-nav a {
        text-align: center;
        padding: 15px 20px;
        text-decoration: none;
        color: var(--text-color);
        border-bottom: 1px solid #eee;
    }
    
    /* Hero Section: Stack content vertically */
    .hero-section .container {
        flex-direction: column;
        text-align: center;
    }
    
    .hero-content {
        order: 2; /* Content below image on mobile */
    }
    
    .hero-image {
        order: 1; /* Image first */
        margin-bottom: 30px;
        text-align: center;
    }
    
    .hero-image img {
        width: 250px;
        height: 250px;
    }
    
    .hero-content h1 {
        font-size: 2rem;
    }
    
    .hero-content h2 {
        font-size: 1.4rem;
    }

    /* Skills: Grid becomes 1-column */
    .skills-grid {
        grid-template-columns: 1fr;
    }
    
    /* General Section Padding Adjustment */
    section {
        padding: 50px 0;
    }
}


/* --- Bonus: Subtle Animation (CSS Only) --- */

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.hero-content h1, .hero-content h2, .hero-content p, .contact-btn {
    animation: fadeIn 1s ease-out 0.2s backwards;
}

/* Apply staggered animation to skills cards */
.skill-card {
    animation: fadeIn 0.6s ease-out backwards;
}

.skills-grid .skill-card:nth-child(1) { animation-delay: 0.2s; }
.skills-grid .skill-card:nth-child(2) { animation-delay: 0.4s; }
.skills-grid .skill-card:nth-child(3) { animation-delay: 0.6s; }
.skills-grid .skill-card:nth-child(4) { animation-delay: 0.8s; }
.skills-grid .skill-card:nth-child(5) { animation-delay: 1.0s; }
.skills-grid .skill-card:nth-child(6) { animation-delay: 1.2s; }
